<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% @trainer.pokemons.each do |poke| %>
    <p>
        Name: <%= poke.name %> <br>
        Level: <%= poke.level %> <br>
        Health: <%= poke.health %>
        <%= button_to "Damage!", damage_path(id: poke), :class => "button medium", :method => :patch %>
    </p>
<% end %>

<% if current_trainer.id == @trainer.id %>
    <%= button_to "Add Pokemon", new_path(), :class => "button medium", :method => :get %>
<% end %>
